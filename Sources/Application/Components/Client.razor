@* Клиент, которому оказывались услуги. *@

<li>
	<a href="@Uri"
	   target="_blank">
		<img src="@Logo"
			 alt="@Name"
			 title="@Name">
	</a>
</li>

@code {
	/// <summary>
	/// Название клиента.
	/// </summary>
	[Parameter]
	public string? Name { get; set; }

	/// <summary>
	/// Адрес веб-сайта клиента.
	/// </summary>
	[Parameter, EditorRequired]
	public required Uri Uri { get; set; }

	/// <summary>
	/// Адрес картинки логотипа клиента. Максимальная высота картинки - 50 пикселей.
	/// </summary>
	[Parameter, EditorRequired]
	public required Uri Logo { get; set; }
}
