@* Набор кнопок, ссылающихся на профили социальных сетей. *@

@using SocialButtonModel = Application.Data.Models.SocialButton

<CascadingValue Value="ItemClass">
	<ul class="@AdditionalListClasses c-social-buttons">

		@foreach (SocialButtonModel button in Items)
		{
			<SocialButton Uri="@button.Uri"
						  IconName="@button.IconName" />
		}

	</ul>
</CascadingValue>

@code {
	/// <summary>
	/// Дополнительные классы CSS, описывающие список кнопок .
	/// </summary>
	[Parameter]
	public string? AdditionalListClasses { get; set; }

	/// <summary>
	/// Класс CSS, описывающий конкретную кнопку.
	/// </summary>
	[Parameter, EditorRequired]
	public required string ItemClass { get; set; }

	/// <summary>
	/// Набор кнопок.
	/// </summary>
	[Parameter, EditorRequired]
	public required IEnumerable<SocialButtonModel> Items { get; set; }
}
