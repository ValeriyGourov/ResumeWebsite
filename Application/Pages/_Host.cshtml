		default-src 'self';
		img-src
			data:
			https:;
		object-src 'none';
		script-src
			https://*.fontawesome.com/
			https://ajax.aspnetcdn.com/
			https://cdnjs.cloudflare.com
			'self'
			'unsafe-eval'
			'sha256-34WLX60Tw3aG6hylk0plKbZZFXCuepeQ6Hu7OqRf8PI=';
		style-src
