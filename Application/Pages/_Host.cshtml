	<!-- Google Font: Roboto -->
	<link href='https://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,700,700italic,900,900italic&subset=latin,latin-ext,cyrillic,cyrillic-ext'
		  rel='stylesheet'
		  type='text/css'>

	<!-- FontAwesome -->
	<script src="https://kit.fontawesome.com/7bb826d7d6.js"
			crossorigin="anonymous"></script>

	<!-- Nivo Lightbox -->
	<environment include="Staging,Production">
		<link rel="stylesheet" href="~/plugins/nivo-lightbox/nivo-lightbox.min.css" />
	</environment>
	<environment include="Development">
		<link rel="stylesheet" href="~/plugins/nivo-lightbox/nivo-lightbox.css" />
	</environment>
	<link rel="stylesheet" href="~/plugins/nivo-lightbox/themes/default/default.css" />

	<!-- Main CSS -->
	<link rel="stylesheet" href="~/css/main.css">

	<!-- Themes -->
	<link rel="stylesheet" href="~/css/themes.dark.css">

	<!-- Custom CSS -->
	<link rel="stylesheet" href="~/css/custom.css">

	<!-- jQuery -->
	<environment include="Staging,Production">
		<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
	</environment>
	<environment include="Development">
		<script src="~/js/jquery-3.5.1.js"></script>
		<script src="~/js/jquery-migrate-3.3.0.js"></script>	<!-- TODO: Убрать миграционный файл после устранения всех предупреждений миграции. -->
	</environment>

	<!-- dense.js (Retina plugin) -->
	<script src="~/js/dense.js"></script>

	<!-- Nivo Lightbox -->
	<environment include="Staging,Production">
		<script src="~/plugins/nivo-lightbox/nivo-lightbox.js"></script>
	</environment>
	<environment include="Development">
		<script src="~/plugins/nivo-lightbox/nivo-lightbox.min.js"></script>
	</environment>

	<!-- ScrollReveal -->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/scrollReveal.js/3.4.0/scrollreveal.min.js"
			integrity="sha512-AF/YPW4YtJrYvI5GyFPgPrNICMeROqbfg25vV6T0GhJWyQG3hpfIXmAB3cbFhw3Ebx88tQD+dP5p+d3dyYDkrg=="
			crossorigin="anonymous"></script>

	<!-- Main JS -->
	<script src="~/js/main.js"></script>

	<!-- Localization -->
	<script src="_content/Localization/js/localization.js"></script>
</head>
<body>
	<app>
		<component type="typeof(App)"
				   render-mode="ServerPrerendered" />
	</app>

	<!-- TODO: Локализовать сообщения об ошибке и страницу ошибки. -->
	<!-- TODO: Для идентификатора #blazor-error-ui изменить стили на более читабельные. -->
	<div id="blazor-error-ui">
		<environment include="Staging,Production">
			An error has occurred. This application may no longer respond until reloaded.
		</environment>
		<environment include="Development">
			An unhandled exception has occurred. See browser dev tools for details.
		</environment>
		<a href=""
		   class="reload">Reload</a>
		<a class="dismiss">🗙</a>
	</div>

	<script src="_framework/blazor.server.js"></script>
</body>
</html>
