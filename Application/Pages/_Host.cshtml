@page "/"

@namespace Application.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<base href="~/" />

	<meta name="description"
		  content="">
	<meta charset="utf-8">
	<meta name="viewport"
		  content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta http-equiv="x-ua-compatible"
		  content="ie=edge">

	@*https://docs.microsoft.com/ru-ru/aspnet/core/security/blazor/content-security-policy*@
