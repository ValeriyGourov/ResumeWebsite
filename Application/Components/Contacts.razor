@using Application.Data.Models

<div class="o-grid">

	@foreach (ContactItem contact in Items)
	{
		if (string.IsNullOrWhiteSpace(contact.Hyperlink))
		{
			<ArbitraryContact Title="@contact.Title"
							  Description="@contact.Description" />
		}
		else
		{
			<HyperlinkContact Title="@contact.Title"
							  Description="@contact.Description"
							  Hyperlink="@contact.Hyperlink" />
		}
	}

</div>

@code {
	[Parameter]
	public IEnumerable<ContactItem> Items { get; set; } = Array.Empty<ContactItem>();
}
